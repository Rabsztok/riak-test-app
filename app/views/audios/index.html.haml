.page-header
  %h1=t '.title', :default => @model.model_name.human.pluralize.titleize
  .actions
    = link_to t('.new', :default => t("helpers.links.new")), new_audio_path(@model.slug), :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= @model.human_attribute_name(:id)
      %th= @model.human_attribute_name(:name)
      %th= @model.human_attribute_name(:attachment)
      %th= @model.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @audios.each do |audio|
      %tr
        %td= audio.id
        %td= audio.name
        %td= audio.attachment
        %td=l audio.created_at
        %td
          = link_to t('.download', :default => t("helpers.links.download")), download_audio_path(@model.slug, audio), :class => 'btn btn-mini btn-primary'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), destroy_audio_path(@model.slug, audio), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @audios
