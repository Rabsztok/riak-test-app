- model_class = MongodbAudio
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @mongodb_audio.name
%p
  %strong= model_class.human_attribute_name(:attachment) + ':'
  %br
  = @mongodb_audio.attachment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), mongodb_audios_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_mongodb_audio_path(@mongodb_audio), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), mongodb_audio_path(@mongodb_audio), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
