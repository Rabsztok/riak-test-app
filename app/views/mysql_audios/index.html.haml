- model_class = MysqlAudio
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
  .actions
    = link_to t('.new', :default => t("helpers.links.new")), new_mysql_audio_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:attachment)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @mysql_audios.each do |mysql_audio|
      %tr
        %td= link_to mysql_audio.id, mysql_audio_path(mysql_audio)
        %td= mysql_audio.name
        %td= mysql_audio.attachment
        %td=l mysql_audio.created_at
        %td
          = link_to t('.download', :default => t("helpers.links.download")), download_mysql_audio_path(mysql_audio), :class => 'btn btn-mini btn-primary'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_mysql_audio_path(mysql_audio), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), mysql_audio_path(mysql_audio), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @mysql_audios
