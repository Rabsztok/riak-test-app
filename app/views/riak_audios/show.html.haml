- model_class = RiakAudio
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @riak_audio.name
%p
  %strong= model_class.human_attribute_name(:attachment) + ':'
  %br
  = @riak_audio.attachment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), riak_audios_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_riak_audio_path(@riak_audio), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), riak_audio_path(@riak_audio), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
